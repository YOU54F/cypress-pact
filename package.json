{
  "name": "cypress-pact",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "Yousaf Nabi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/you54f/cypress-pact.git"
  },
  "scripts": {
    "lint": "tslint --project .",
    "lint-fix": "tslint --project . --fix",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:cypress:serve": "serve --listen 13370 ./cypress/fixtures/test-app",
    "test:cypress:run": "wait-port --timeout 10000 localhost:13370 && cypress run",
    "test:cypress:open": "wait-port --timeout 10000 localhost:13370 && cypress open",
    "test:cypress:dev": "npm-run-all --silent --parallel --race test:cypress:serve test:cypress:open",
    "test:cypress": "npm-run-all --silent --parallel --race test:cypress:serve test:cypress:run"
  },
  "dependencies": {
    "@cypress/webpack-preprocessor": "5.6.0",
    "@pact-foundation/pact": "9.15.0",
    "@pact-foundation/pact-web": "9.15.0",
    "@testing-library/cypress": "6.0.1",
    "@types/node": "10.17.53",
    "cypress": "4.12.1",
    "cypress-multi-reporters": "1.4.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "mocha": "7.2.0",
    "mocha-junit-reporter": "1.23.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "serve": "11.3.2",
    "ts-loader": "7.0.5",
    "ts-node": "8.10.2",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-no-focused-test": "0.5.0",
    "typescript": "3.9.9",
    "wait-port": "0.2.9",
    "webpack": "4.46.0"
  },
  "lint-staged": {
    "cypress/**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "scripts/**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
